{
  "manifest_version": 3,
  "name": "NoHijacking - Clipboard Protection",
  "version": "1.0.0",
  "description": "Detects and alerts users about clipboard hijacking attempts to protect against malicious command modifications",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}